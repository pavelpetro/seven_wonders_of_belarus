<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_marginBottom="2dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground">

        <TextView
            android:id="@+id/readMoreView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textview_description"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textview_description"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="@string/moreWiki"
            android:textColor="@color/colorAccent"
            android:textStyle="italic"
            tools:text="@string/moreWiki" />


        <ImageView
            android:id="@+id/likeView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="2dp"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:cropToPadding="true"
            android:src="@drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/locationView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/shareView"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/shareView"
            android:clickable="true"
            android:src="@drawable/my_location"
            android:tint="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/textview_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingTop="10dp"
            android:text="@string/wonderName1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/shareView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@+id/readMoreView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:src="@drawable/share"
            android:tint="@color/colorPrimaryDark"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textview_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textview_name"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/imageView"
            android:paddingStart="10dp"
            android:text="@string/wonder1"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textview_name"
            android:layout_marginTop="10dp"
            android:alpha="1.0"
            android:clickable="true"
            android:elevation="20dp"
            android:scaleType="centerCrop"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:src="@drawable/drawable1" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

